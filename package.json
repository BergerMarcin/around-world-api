{
  "name": "around-world-api",
  "version": "1.0.0",
  "description": "Rest API for 'Around World' app",
  "author": "BergerMarcin <marcin.berger@wp.pl>",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": "22.21.0"
  },
  "scripts": {
    "dev": "npm run check-node && DEBUG=* NODE_ENV=development nodemon",
    "dev-debug": "npm run check-node && DEBUG=* NODE_ENV=development FASTIFY_LOG_LEVEL=debug nodemon",
    "build": "tsup src/index.ts --format esm --outDir dist --clean",
    "serve": "npm run check-node && DEBUG=* NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ts-check": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --write src/",
    "reinstall": "npm run check-node && rm -rf node_modules && rm package-lock.json && npm install",
    "check-node": "node scripts/check-node-version.js"
  },
  "keywords": [
    "around the world",
    "travel",
    "holidays",
    "booking",
    "api",
    "fastify",
    "typescript"
  ],
  "dependencies": {
    "@fastify/sensible": "^6.0.4",
    "debug": "^4.4.3",
    "dotenv-flow": "^4.1.0",
    "fastify": "^5.7.1",
    "fastify-plugin": "^5.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
